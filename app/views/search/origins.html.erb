<% provide(:title, "Any2cn") %>

<% content_for :head do %>
<style type="text/css">
  body {
    padding-top: 60px;
    padding-bottom: 40px;
  }
  .sidebar-nav {
    padding: 9px 0;
  }

  @media (max-width: 980px) {
    /* Enable use of floated navbar text */
    .navbar-text.pull-right {
      float: none;
      padding-left: 5px;
      padding-right: 5px;
    }
  }
</style>
<% end %>


<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="brand" href="/">Any2cn</a>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="active"><a href="#">结果</a></li>
          <li><a href="#about">关于</a></li>
        </ul>
        <form class="navbar-search" accept-charset="UTF-8" action="/s" method="post">
          <input type="text" class="search-query" placeholder="文章标题或网址..." id="q" name="q">
        </form>

        <form class="navbar-form pull-right">
          <a class="btn" href="javascript:alert('分享')">分享译文</a>
        </form>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>

<div class="container">

  <% unless @origin.nil? %>
  <div class="well">
    <p><%= debug(@origin) %></p>
  </div>
  <% end %>

  <div class="row">
    <% @origins.each do |origin| %>
    <div class="">
      <h2><a class="result_url" href="/s?q=<%= origin.url %>"><%= origin.title %></a></h2>
      <small><a class="muted" target="_black" href="<%= origin.url %>"><%= origin.url %></a></small>
    </div>
    <% end %>
  </div>

  <hr>

</div><!-- /container -->


<div id="footer">
  <div class="container">
    <p>&copy; Any2cn.com 2013</p>
  </div>
</div>
